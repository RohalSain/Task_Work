<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_bg"
    android:layout_height="match_parent"
    tools:context="com.example.rohal.task_work.Manage_Password">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parentPanel">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/user_pic_layout"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/parentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_placeholder"
            app:placeholderImage="@drawable/ic_placeholder"
            app:roundAsCircle="true" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/user_pic_layout">

        <TextView
            android:id="@+id/username"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="20sp"/>
        <View
            android:id="@+id/username_view"
            android:layout_height=".5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"/>


        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/old"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:text="Old Password"
            android:textSize="20dp"/>
        <View
            android:id="@+id/emial_view"
            android:layout_height=".5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"/>

        <EditText
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="5dp"
            android:ems="14"
            android:inputType="textPassword"
            android:text="New Password"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <View
            android:id="@+id/phone_view"
            android:layout_height=".5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Password"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Manage Password" />

    </LinearLayout>
</RelativeLayout>