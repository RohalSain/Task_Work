<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context="com.example.rohal.task_work.edit_activity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parentPanel">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/user_pic_layout"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/parentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/editpic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_placeholder"
            app:placeholderImage="@drawable/ic_placeholder"
            android:onClick="Dialog_box"
            app:roundAsCircle="true" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/user_pic_layout">

        <EditText
            android:id="@+id/user"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="20dp"/>
        <View
            android:id="@+id/username_view"
            android:layout_height=".5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"/>


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/em"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:text="Email"
            android:textSize="20dp"/>
        <View
            android:id="@+id/emial_view"
            android:layout_height=".5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/ph"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:text="Phone Number"
            android:textSize="20dp" />
        <View
            android:id="@+id/phone_view"
            android:layout_height=".5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"/>


        <TextView
            android:id="@+id/cou"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:text="Country"
            android:textSize="20dp" />
        <View
            android:id="@+id/country_view"
            android:layout_height=".5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/save"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Save" />

    </LinearLayout>
</RelativeLayout>

